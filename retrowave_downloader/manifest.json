{
  "name": "__MSG_appName__",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "__MSG_appDesc__",
  "homepage_url": "https://github.com/Nachtalb/retrowave_downloader",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "default_locale": "en",
  "page_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png"
    },
    "default_title": "__MSG_appName__"
  },
  "background": {
    "scripts": [
      "src/background/background.js"
    ]
  },
  "permissions": [
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.retrowave.ru/*"
      ],
      "js": [
        "src/inject/utils.js",
        "src/inject/inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "src/content/content.js",
    "src/content/content.css"
  ]
}
